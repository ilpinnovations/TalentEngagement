<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.InsuranceActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.InsuranceActivity">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color7"
            android:padding="@dimen/activity_vertical_margin"
            android:text="National Insurance Number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color6"
                android:padding="@dimen/activity_vertical_margin"
                android:text="What is NI Number ?\nThe NI Number is your personal account number similar to PAN card in india (It is valid for life). The number makes sure that the Ni contributions paid are recorded with HMRC" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color3"
                android:padding="@dimen/activity_vertical_margin"
                android:text="It is mandatory for all expats on long term deputation to the UK to have a National Insurance(NI) number to comply with HMRC regulations(UK Inland Revenue Department)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color2"
                android:padding="@dimen/activity_vertical_margin"
                android:text="NI Application Process" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c5e1a5"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Collect your BRP card at the earliest since you need to apply for the NI number within one month of your arrival." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="#aed581"
                android:padding="@dimen/activity_vertical_margin"
                android:text="For application, please send email to &lt;sagila.majid@tcs.com> with the following details:\n - Full name as per passport.\n - UK permanent residence address\n - Employee number - UK contact number" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9ccc65"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Forms with instructions will be sent out within 3-5 working days. Filled in forms to be sent back within the same week." />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7cb342"
                android:padding="@dimen/activity_vertical_margin"
                android:text="The NI number will be sent directly from the department of work pension through post within 6-8 weeks to the address you provided." />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cfd8dc"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Please ensure you upload the NI number on Ultimatix>Global ESS>MY Profile>National Identifier" />

            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/ultimatix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>